---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ThreeDViewer from '../../components/ThreeDViewer.astro';

const title = '3D Viewer Demo';
const description = 'Interactive 3D molecule viewer demo using 3Dmol.js';
---

<BaseLayout title={title} description={description} sideBarActiveItemID="research">
  <div class="prose max-w-none">
    <h1>Interactive 3D Viewer Demo</h1>
    <p>This demo loads a sample methane structure and renders it with 3Dmol.js. Use mouse to rotate and zoom.</p>
    <ThreeDViewer src="/sample_methane.pdb" format="pdb" height="420px" />
  </div>
</BaseLayout>

