---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Teaching" sideBarActiveItemID="teaching">
    <div>
        <div class="text-3xl w-full font-bold mb-5">Computational Chemistry</div>
    </div>

    <HorizontalCard
            title="Dissociation of Molecular Hydrogen"
            img="/h2.png"
            desc="Jupyter Notebook for the dissociation of Hydrogen using DFT"
            url="https://github.com/rjbunting/bonddissociationworkshop"
            badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
            title="Lecture Slides"
            img="/chemistryslides.png"
            desc="Work in progress lecture slides for 'An Introduction to Computational Chemistry' course"
            url="https://1drv.ms/p/s!AgEBZympJpEbhFfCYSRgSb2GXjwo"
    />



    <div>
        <div class="text-3xl w-full font-bold mb-5 mt-10">Catalysis</div>
    </div>

    <HorizontalCard
            title="Lecture Slides"
            img="/catalysisslides.png"
            desc="Lecture slides for 'An Introduction to Catalysis' course"
            url="https://1drv.ms/p/s!AgEBZympJpEbhFlHNu-2NOqKiCCc"
    />
    <div class="divider my-0"></div>
</BaseLayout>
