---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
---

<BaseLayout title="Teaching" sideBarActiveItemID="teaching">
    <div>
        <div class="text-3xl w-full font-bold mb-5">Computational Chemistry</div>
    </div>

    <HorizontalCard
            title="Introduction to Computational Chemistry Workshops (WIP)"
            img="/h2.png"
            desc="Jupyter Notebooks for the course"
            url="https://github.com/rjbunting/introcompchemnotebooks"
            badge="NEW"
    />
    <div class="divider my-0"></div>
    <HorizontalCard
            title="Lecture Slides"
            img="/chemistryslides.png"
            desc="Lecture slides for 'An Introduction to Computational Chemistry' course (WIP)"
            url="https://1drv.ms/p/s!AgEBZympJpEbhQFu2u64HWlnLAQI"
    />



    <div>
        <div class="text-3xl w-full font-bold mb-5 mt-10">Catalysis</div>
    </div>

    <HorizontalCard
            title="Lecture Slides"
            img="/catalysisslides.png"
            desc="Lecture slides for 'An Introduction to Catalysis' course"
            url="https://1drv.ms/p/s!AgEBZympJpEbhFlHNu-2NOqKiCCc"
    />
    <div class="divider my-0"></div>
</BaseLayout>
