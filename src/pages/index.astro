---
import BaseLayout from "../layouts/BaseLayout.astro";

const homepageTitle = "Dr. Rhys Bunting | Computational Chemist";
const homepageDescription = "Dr. Rhys Bunting is a computational chemist working in energy, catalysis, and C-H activation. View research, CV, publications, and teaching.";
const homepageStructuredData = `{
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Rhys Bunting",
  "url": "https://rjbunting.github.io/",
  "jobTitle": "Computational Chemist"
}`;
---

<BaseLayout sideBarActiveItemID="home" title={homepageTitle} description={homepageDescription} structuredData={homepageStructuredData}>
  <!-- Hero -->
  <section class="mb-8">
    <div class="bg-gradient-to-r from-base-200 to-base-100 rounded-lg p-3 md:p-4 shadow-lg">
      <div class="flex flex-col md:flex-row items-center gap-3">
        <div class="w-full md:w-1/3 flex justify-center">
          <div class="avatar">
            <div class="w-36 h-36 md:w-44 md:h-44 rounded-full overflow-hidden">
              <img src="/images/posterpic.JPG" alt="Poster" loading="lazy" class="w-full h-full object-cover" />
            </div>
          </div>
        </div>

        <div class="w-full md:w-3/4 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl font-extrabold leading-tight">Rhys J. Bunting PhD</h1>
          <p class="text-lg italic text-muted mt-1">Theoretical Chemist</p>

          <p class="mt-4 text-base text-justify md:text-left">
            Dr. Bunting takes inspiration and applies methods from interdisciplinary fields to tackle key issues within chemistry. He works at the interface of chemistry,
            chemical engineering, and data science. He tackles challenges within the topics of catalysis, energy, material degradation, and nucleation & growth. He blends <em>ab initio</em> electronic structure methods,
            machine learning, molecular dynamics, microkinetics, and kinetic Monte Carlo to bridge theory with experiment. His goal is to push the boundaries of modeling to encapsulate the complexities of experimental systems.
          </p>

          <div class="mt-4 flex flex-col sm:flex-row gap-3 sm:gap-4 justify-center md:justify-start">
            <a href="/cv" class="btn btn-primary">View CV</a>
            <a href="/publications" class="btn btn-ghost">Publications</a>
          </div>

          <div class="mt-4 text-sm text-muted flex gap-3 justify-center md:justify-start">
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Quick links / Explore -->
  <section class="mb-8">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <a href="/research" aria-label="Explore research themes" class="explore-card block rounded-lg p-6 bg-base-100 shadow transition-transform transform hover:shadow-xl hover:-translate-y-1 hover:scale-[1.02] cursor-pointer no-underline">
